<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/travel_planner_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/travel_dnext_title_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="45dp"
                android:text="@string/fragment_travel_destination_title"
                android:textSize="30sp" />

            <Button
                android:id="@+id/travel_dnext_button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/accent50"
                android:text="NEXT" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TextView
                android:id="@+id/travel_destination_title_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="45dp"
                android:text="@string/fragment_travel_destination_title"
                android:textSize="30sp" />

            <Button
                android:id="@+id/travel_destination_button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/accent50"
                android:text="NEXT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/travel_go_plan_trip_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="45dp"
                android:paddingRight="30dp"
                android:text="@string/view_travel_card_action"
                android:textSize="30sp" />

            <Button
                android:id="@+id/travel_go_plan_trip_button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/accent50"
                android:text="NEXT" />

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
